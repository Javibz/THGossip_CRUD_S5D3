<%= form_for @gossips do |f| %>
  <div class="form-row">
    <div class="form-group col-md-4">
      Titre du Gossip : <%= f.text_field :title, class: 'form-control',  placeholder: 'Nom du gossip' %>
    </div>
  <div class="form-group col-md-4">
    Pseudo Secret : <%= f.text_field :user_id, class: 'form-control', placeholder: 'Secret name' %>
  </div>
    <div class="form-group col-md-6">
    Contenu du gossip : <%= f.text_area :content, class: 'form-control', placeholder: 'Ecris ton gossip...' %>
    </div>
  </div>
    <%= f.submit class: 'btn btn-primary' %>
<% end %>
